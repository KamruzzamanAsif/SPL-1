<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane fx:id="metricsAnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.MetricsController">
   <children>
      <ButtonBar fx:id="metricsBackButtonBar" layoutX="14.0" layoutY="14.0" prefHeight="40.0" prefWidth="35.0">
        <buttons>
          <Button fx:id="metricsBackButton" mnemonicParsing="false" onAction="#clickOnMetricsBackButton" text="Back" />
        </buttons>
      </ButtonBar>
      <Button fx:id="metricsBrowseButton" layoutX="448.0" layoutY="132.0" mnemonicParsing="false" onAction="#clickOnBrowseButton" text="Browse" />
      <TextField fx:id="metricsTextField" layoutX="201.0" layoutY="132.0" prefHeight="24.0" prefWidth="199.0" />
      <Label fx:id="metricsLabel" layoutX="212.0" layoutY="81.0" prefHeight="40.0" prefWidth="178.0" text="Select a .c extension file" textAlignment="CENTER" wrapText="true" />
      <Button fx:id="LOCMetricsButton" layoutX="252.0" layoutY="243.0" mnemonicParsing="false" onAction="#clickOnLOCMetricsButton" text="LOC Metrics" />
      <Button fx:id="HalsteadMetricsButton" layoutX="237.0" layoutY="289.0" mnemonicParsing="false" onAction="#clickOnHalsteadMetricsButton" text="Halstead Metrics" />
   </children>
</AnchorPane>
